<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0
                      http://maven.apache.org/xsd/settings-1.0.0.xsd">

  <activeProfiles>
    <activeProfile>github</activeProfile>
  </activeProfiles>

  <profiles>
    <profile>
      <id>github</id>
      <repositories>
        <repository>
          <id>central</id>
          <url>https://repo1.maven.org/maven2</url>
          <releases><enabled>true</enabled></releases>
          <snapshots><enabled>true</enabled></snapshots>
        </repository>
        <repository>
          <id>poi.helper</id>
          <name>Poi Helper Repository</name>
          <url>https://maven.pkg.github.com/anthunt/poi-helper</url>
        </repository>
        <repository>
          <id>mvn.downloader</id>
          <name>mvn-artifact-downloader</name>
          <url>https://maven.pkg.github.com/anthunt/mvn-artifact-downloader</url>
        </repository>
      </repositories>
    </profile>
  </profiles>

  <servers>
    <server>
      <id>poi.helper</id>
      <username>anthunt</username>
      <password>_GITHUB_TOKEN</password>
    </server>
    <server>
      <id>mvn.downloader</id>
      <username>anthunt</username>
      <password>_GITHUB_TOKEN</password>
    </server>
  </servers>
</settings>
